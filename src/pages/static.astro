---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="static" description="White noise. The space between channels.">
  <div class="static-container">
    <canvas id="static-canvas"></canvas>
    
    <div class="static-overlay">
      <div class="channel-display">
        <span class="channel-label">CH</span>
        <span class="channel-number" id="channel">--</span>
      </div>
      
      <div class="no-signal">
        <p class="blink">NO SIGNAL</p>
        <p class="sub">searching for transmission...</p>
      </div>
      
      <div class="static-controls">
        <div class="control">
          <label>intensity</label>
          <input type="range" id="intensity" min="0" max="100" value="50">
        </div>
        <div class="control">
          <label>color</label>
          <select id="color-mode">
            <option value="mono">monochrome</option>
            <option value="rgb">rgb noise</option>
            <option value="green">phosphor green</option>
            <option value="amber">amber crt</option>
          </select>
        </div>
      </div>
      
      <div class="tuning-bar">
        <div class="bar-track">
          <div class="bar-fill" id="tuning-fill"></div>
        </div>
        <span class="tuning-label">tuning...</span>
      </div>
    </div>
    
    <div class="scan-lines"></div>
    
    <nav class="static-nav">
      <a href="/">home</a>
      <a href="/signal">signal</a>
      <a href="/void">void</a>
    </nav>
  </div>
</BaseLayout>

<style>
  .static-container {
    position: fixed;
    inset: 0;
    background: #000;
    overflow: hidden;
  }
  
  #static-canvas {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }
  
  .static-overlay {
    position: relative;
    z-index: 2;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    padding: 2rem;
  }
  
  .channel-display {
    position: fixed;
    top: 2rem;
    right: 2rem;
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    font-family: 'JetBrains Mono', monospace;
  }
  
  .channel-label {
    font-size: 0.8rem;
    color: #444;
  }
  
  .channel-number {
    font-size: 2rem;
    color: #fff;
    text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
  }
  
  .no-signal {
    text-align: center;
  }
  
  .no-signal .blink {
    font-family: 'JetBrains Mono', monospace;
    font-size: 3rem;
    font-weight: 700;
    color: #fff;
    letter-spacing: 0.5rem;
    animation: blink 1s steps(1) infinite;
    margin: 0;
    text-shadow: 0 0 20px rgba(255, 255, 255, 0.8);
  }
  
  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }
  
  .no-signal .sub {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8rem;
    color: #444;
    margin-top: 1rem;
    letter-spacing: 0.2em;
  }
  
  .static-controls {
    display: flex;
    gap: 2rem;
    margin-top: 2rem;
  }
  
  .control {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    align-items: center;
  }
  
  .control label {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.7rem;
    color: #444;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }
  
  .control input[type="range"] {
    width: 120px;
    accent-color: #fff;
  }
  
  .control select {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    padding: 0.5rem;
    background: #111;
    border: 1px solid #333;
    color: #fff;
    cursor: pointer;
  }
  
  .tuning-bar {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    width: 200px;
  }
  
  .bar-track {
    width: 100%;
    height: 4px;
    background: #222;
    border-radius: 2px;
    overflow: hidden;
  }
  
  .bar-fill {
    height: 100%;
    width: 0%;
    background: linear-gradient(90deg, #444, #fff, #444);
    animation: tune 3s ease-in-out infinite;
  }
  
  @keyframes tune {
    0%, 100% { width: 10%; margin-left: 0; }
    50% { width: 30%; margin-left: 70%; }
  }
  
  .tuning-label {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.6rem;
    color: #333;
    text-transform: uppercase;
    letter-spacing: 0.2em;
  }
  
  .scan-lines {
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(0, 0, 0, 0.3) 2px,
      rgba(0, 0, 0, 0.3) 4px
    );
    pointer-events: none;
    z-index: 3;
  }
  
  .static-nav {
    position: fixed;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 2rem;
    z-index: 4;
  }
  
  .static-nav a {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: #444;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .static-nav a:hover {
    color: #fff;
  }
</style>

<script>
  const canvas = document.getElementById('static-canvas') as HTMLCanvasElement;
  const ctx = canvas?.getContext('2d');
  const intensityInput = document.getElementById('intensity') as HTMLInputElement;
  const colorModeSelect = document.getElementById('color-mode') as HTMLSelectElement;
  const channelEl = document.getElementById('channel');
  
  let intensity = 50;
  let colorMode = 'mono';
  
  function resize() {
    if (canvas) {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    }
  }
  
  function drawStatic() {
    if (!ctx || !canvas) return;
    
    const imageData = ctx.createImageData(canvas.width, canvas.height);
    const data = imageData.data;
    const factor = intensity / 100;
    
    for (let i = 0; i < data.length; i += 4) {
      const noise = Math.random() * 255 * factor;
      
      switch (colorMode) {
        case 'mono':
          data[i] = noise;
          data[i + 1] = noise;
          data[i + 2] = noise;
          break;
        case 'rgb':
          data[i] = Math.random() * 255 * factor;
          data[i + 1] = Math.random() * 255 * factor;
          data[i + 2] = Math.random() * 255 * factor;
          break;
        case 'green':
          data[i] = noise * 0.2;
          data[i + 1] = noise;
          data[i + 2] = noise * 0.3;
          break;
        case 'amber':
          data[i] = noise;
          data[i + 1] = noise * 0.7;
          data[i + 2] = noise * 0.2;
          break;
      }
      data[i + 3] = 255;
    }
    
    ctx.putImageData(imageData, 0, 0);
  }
  
  function updateChannel() {
    if (channelEl) {
      const ch = Math.floor(Math.random() * 99) + 1;
      channelEl.textContent = ch.toString().padStart(2, '0');
    }
  }
  
  // Event listeners
  intensityInput?.addEventListener('input', (e) => {
    intensity = parseInt((e.target as HTMLInputElement).value);
  });
  
  colorModeSelect?.addEventListener('change', (e) => {
    colorMode = (e.target as HTMLSelectElement).value;
  });
  
  // Initialize
  resize();
  window.addEventListener('resize', resize);
  
  // Animation loop
  function animate() {
    drawStatic();
    requestAnimationFrame(animate);
  }
  animate();
  
  // Channel changes
  setInterval(updateChannel, 5000);
  updateChannel();
  
  // Audio context for white noise (optional, user-triggered)
  canvas?.addEventListener('click', () => {
    try {
      const audioCtx = new (window.AudioContext || (window as any).webkitAudioContext)();
      const bufferSize = 2 * audioCtx.sampleRate;
      const noiseBuffer = audioCtx.createBuffer(1, bufferSize, audioCtx.sampleRate);
      const output = noiseBuffer.getChannelData(0);
      
      for (let i = 0; i < bufferSize; i++) {
        output[i] = Math.random() * 2 - 1;
      }
      
      const whiteNoise = audioCtx.createBufferSource();
      whiteNoise.buffer = noiseBuffer;
      whiteNoise.loop = true;
      
      const gainNode = audioCtx.createGain();
      gainNode.gain.value = 0.1;
      
      whiteNoise.connect(gainNode);
      gainNode.connect(audioCtx.destination);
      whiteNoise.start();
      
      setTimeout(() => {
        gainNode.gain.exponentialRampToValueAtTime(0.001, audioCtx.currentTime + 1);
        setTimeout(() => whiteNoise.stop(), 1000);
      }, 3000);
    } catch (e) {
      // Audio not supported
    }
  });
</script>
