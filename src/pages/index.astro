    </nav>
  </main>
  
  <!-- Random entropy display -->
  <div class="fixed bottom-4 left-4 text-[10px] text-zinc-800 font-mono hidden md:block">
    <span id="entropy"></span>
  </div>
  
  <script>
    function randomHex(length: number): string {
      return Array.from(crypto.getRandomValues(new Uint8Array(length)))
        .map(b => b.toString(16).padStart(2, '0'))
        .join('');
    }
    
    function updateEntropy() {
      const el = document.getElementById('entropy');
      if (el) {
        el.textContent = '0x' + randomHex(8);
      }
    }
    
    setInterval(updateEntropy, 150);
    updateEntropy();
    
    console.log('%câ—‰ urandom.io', 'font-size: 24px; color: #667eea;');
    console.log('%cEntropy awaits. The patterns are listening.', 'color: #666;');
  </script>
