<script>
  const ocean = document.getElementById('ocean');
  const depthDisplay = document.getElementById('depth');
  const zones = document.querySelectorAll('.zone');
  
  const gradients = [
    { depth: 0, bg: 'linear-gradient(to bottom, #0c4a6e, #082f49)' },
    { depth: 200, bg: 'linear-gradient(to bottom, #082f49, #0c1929)' },
    { depth: 1000, bg: 'linear-gradient(to bottom, #0c1929, #0a0a1a)' },
    { depth: 4000, bg: 'linear-gradient(to bottom, #0a0a1a, #0a0510)' },
    { depth: 6000, bg: 'linear-gradient(to bottom, #0a0510, #050505)' },
    { depth: 11000, bg: 'linear-gradient(to bottom, #050505, #000000)' },
    { depth: 99999, bg: 'linear-gradient(to bottom, #000000, #0a0000)' },
  ];
  
  function updateDepth() {
    const scrollY = window.scrollY;
    const maxScroll = document.body.scrollHeight - window.innerHeight;
    const scrollPercent = scrollY / maxScroll;
    
    // Calculate depth (exponential scale for drama)
    const depth = Math.floor(Math.pow(scrollPercent, 1.5) * 12000);
    if (depthDisplay) depthDisplay.textContent = depth.toLocaleString();
    
    // Update background
    for (let i = gradients.length - 1; i >= 0; i--) {
      if (depth >= gradients[i].depth) {
        if (ocean) ocean.style.background = gradients[i].bg;
        break;
      }
    }
  }
  
  window.addEventListener('scroll', updateDepth);
  updateDepth();
  
  console.log('%cğŸ¦‘ deep sea', 'font-size: 20px; color: #67e8f9;');
  console.log('%chow far will you descend?', 'color: #666;');
</script>

