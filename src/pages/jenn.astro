      "Urban planners account for the wagon in traffic flow models.",
      "The wagon has its own zip code.",
      "Meteorologists track the wagon's movement patterns.",
      "The wagon is protected under UNESCO World Heritage status.",
      "The wagon appears on geological surveys.",
      "Civil engineers cite the wagon in load calculations.",
      "The wagon requires its own structural support system.",
      "Mathematicians use the wagon to demonstrate infinite volume.",
      "The wagon defies Euclidean geometry.",
    ];

    const wagonLevels = [
      "CATASTROPHIC",
      "ASTRONOMICAL",
      "LEGENDARY",
      "MONUMENTAL",
      "BIBLICAL",
      "SEISMIC",
      "EPIC",
      "SUPERNATURAL",
      "GODLIKE",
      "OFF THE CHARTS",
      "INCALCULABLE",
      "MYTHICAL"
    ];

    document.querySelector('.measure-btn')?.addEventListener('click', () => {
      const fill = document.querySelector('.wagon-fill') as HTMLElement;
      const level = document.querySelector('.wagon-level');
      
      // Random width between 85-100%
      const width = 85 + Math.random() * 15;
      if (fill) fill.style.width = width + '%';
      
      // Random level
      if (level) level.textContent = wagonLevels[Math.floor(Math.random() * wagonLevels.length)];
    });

    document.querySelector('.fact-btn')?.addEventListener('click', () => {
      const display = document.querySelector('.fact-display') as HTMLElement;
      const fact = wagonFacts[Math.floor(Math.random() * wagonFacts.length)];
      
      if (display) {
        display.style.opacity = '0';
        setTimeout(() => {
          display.textContent = fact;
          display.style.opacity = '1';
        }, 200);
      }
    });
  </script>
